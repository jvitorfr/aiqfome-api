        "/api/admin/favorites/{clientId}": {
            "get": {
                "tags": [
                    "Admin - Favorites"
                ],
                "summary": "Lista os produtos favoritos de um cliente (admin)",
                "operationId": "084b4a2f387e5876762e09079eda9775",
                "parameters": [
                    {
                        "name": "clientId",
                        "in": "path",
                        "description": "ID do cliente",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de favoritos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/client/register": {
